<html>

<head>

</head>
<link rel="stylesheet" href="/css/user_profile.css">

<body>
    <div class="wrapper">
        <div class="header">
            <h1>Profile Page</h1>
            <img src="<%= profile_user.avatar %>" alt="">
            <h3>
                <%= profile_user.name %>
            </h3>
            <p><strong>Email :</strong>
                <%= profile_user.email %>
            </p>
        </div>

        <% if(user.id==profile_user.id) {%>
            <div class="update ">
                <h3>Update Your Profile : </h3>
                <form action="/users/update/<%=profile_user.id %>" enctype="multipart/form-data" method="POST">
                    Name : <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name %>" required>
                    Email : <input type="email " name="email" placeholder="Your Email" value="<%= profile_user.email %>"
                        required>
                    Avatar : <input type="file" name="avatar" placeholder="Profile Picture">
                    <input type="submit" value="Update">
                </form>
            </div>

            <% } %>
    </div>


</body>

</html>